" BASIC EDITING CONFIGURATION
""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""
set nocompatible
let mapleader=","
" Fix slow O inserts
set timeout timeoutlen=1000 ttimeoutlen=100
